<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombreAlumCalif"
            android:text="nombreAlumno"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/practicaName" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/practicaName"
            android:textSize="20sp"
            android:text="nombrePra"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:layout_below="@+id/nombreAlumCalif"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calificaionAlumnoView"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:text="calificacion"
            android:textStyle="italic"
            android:layout_below="@+id/practicaName"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</LinearLayout>